{
  "id": "homey.countdown",
  "version": "1.2.5",
  "compatibility": ">=1.5.0",
  "sdk": 2,
  "name": {
    "en": "Countdown timers"
  },
  "description": {
    "en": "Countdown timers for Homey",
    "nl": "Zandlopers voor Homey"
  },
  "category": [
    "tools"
  ],
  "author": {
    "name": "Jeroen Bos",
    "email": "jeroenbos22@gmail.com"
  },
  "contributors": {
    "developers": [
      {
        "name": "Jeroen Bos",
        "email": "jeroenbos22@gmail.com"
      },
      {
        "name": "Milan van As",
        "email": "milanvanas@gmail.com"
      }
    ]
  },
  "contributing": {
    "donate": {
      "paypal": {
        "username": "jeroenbos22"
      }
    }
  },
  "flow": {
    "triggers": [
      {
        "id": "specific_countdown_started",
        "deprecated": true,
        "title": {
          "en": "Specific timer started (deprecated)",
          "nl": "Specifieke zandloper gestart (deprecated)"
        },
        "args": [
          {
            "name": "name",
            "type": "text",
            "placeholder": {
              "en": "Timername",
              "nl": "Naam zandloper"
            }
          }
        ]
      },
      {
        "id": "specific_countdown_started_autocomplete",
        "title": {
          "en": "Specific timer started",
          "nl": "Specifieke zandloper gestart"
        },
        "args": [
          {
            "name": "name",
            "type": "autocomplete",
            "placeholder": {
              "en": "Timername",
              "nl": "Naam zandloper"
            }
          }
        ]
      },
      {
        "id": "specific_countdown_stopped",
        "deprecated": true,
        "title": {
          "en": "Specific timer finished (deprecated)",
          "nl": "Specifieke zandloper is leeg (deprecated)"
        },
        "args": [
          {
            "name": "name",
            "type": "text",
            "placeholder": {
              "en": "Timername",
              "nl": "Naam zandloper"
            }
          }
        ]
      },
      {
        "id": "specific_countdown_stopped_autocomplete",
        "title": {
          "en": "Specific timer finished",
          "nl": "Specifieke zandloper is leeg"
        },
        "args": [
          {
            "name": "name",
            "type": "autocomplete",
            "placeholder": {
              "en": "Timername",
              "nl": "Naam zandloper"
            }
          }
        ]
      },
      {
        "id": "countdown_started",
        "title": {
          "en": "A timer has started",
          "nl": "Een zandloper is gestart"
        },
        "tokens": [
          {
            "name": "name",
            "type": "string",
            "title": {
              "en": "Timername",
              "nl": "Naam zandloper"
            },
            "example": {
              "en": "timer1",
              "nl": "zandloper1"
            }
          }
        ]
      },
      {
        "id": "countdown_stopped",
        "title": {
          "en": "A timer has finished",
          "nl": "Een zandloper is leeg"
        },
        "tokens": [
          {
            "name": "name",
            "type": "string",
            "title": {
              "en": "Timername",
              "nl": "Naam zandloper"
            },
            "example": {
              "en": "timer1",
              "nl": "zandloper1"
            }
          }
        ]
      }
    ],
    "conditions": [
      {
        "id": "countdown_active",
        "deprecated": true,
        "title": {
          "en": "A timer is !{{|not}} running (deprecated)",
          "nl": "Zandloper loopt !{{|niet}} (deprecated)"
        },
        "args": [
          {
            "name": "name",
            "type": "text",
            "placeholder": {
              "en": "Timername",
              "nl": "Naam zandloper"
            }
          }
        ]
      },
      {
        "id": "countdown_active_autocomplete",
        "title": {
          "en": "A timer is !{{|not}} running",
          "nl": "Zandloper loopt !{{|niet}}"
        },
        "args": [
          {
            "name": "name",
            "type": "autocomplete",
            "placeholder": {
              "en": "Timername",
              "nl": "Naam zandloper"
            }
          }
        ]
      }
    ],
    "actions": [
      {
        "id": "countdown_update",
        "deprecated": true,
        "title": {
          "en": "Start / update a timer",
          "nl": "Draai een nieuwe zandloper om"
        },
        "args": [
          {
            "name": "name",
            "type": "text",
            "placeholder": {
              "en": "Timername",
              "nl": "Naam zandloper"
            }
          },
          {
            "name": "seconds",
            "type": "number",
            "placeholder": {
              "en": "seconds",
              "nl": "seconden"
            }
          }
        ]
      },
      {
        "id": "countdown_update_autocomplete",
        "title": {
          "en": "Start / update an existing timer",
          "nl": "Draai bestaande zandloper om"
        },
        "args": [
          {
            "name": "name",
            "type": "autocomplete",
            "placeholder": {
              "en": "Timername",
              "nl": "Naam zandloper"
            }
          },
          {
            "name": "seconds",
            "type": "number",
            "placeholder": {
              "en": "seconds",
              "nl": "seconden"
            }
          }
        ]
      },
      {
        "id": "countdown_stop",
        "deprecated": true,
        "title": {
          "en": "Stop a timer (deprecated)",
          "nl": "Stop een zandloper (deprecated)"
        },
        "args": [
          {
            "name": "name",
            "type": "text",
            "placeholder": {
              "en": "Timer name",
              "nl": "Naam zandloper"
            }
          }
        ]
      },
      {
        "id": "countdown_stop_autocomplete",
        "title": {
          "en": "Stop a timer",
          "nl": "Stop een zandloper"
        },
        "args": [
          {
            "name": "name",
            "type": "autocomplete",
            "placeholder": {
              "en": "Timer name",
              "nl": "Naam zandloper"
            }
          }
        ]
      },
      {
        "id": "countdown_stop_all",
        "title": {
          "en": "Stop all timers",
          "nl": "Stop alle zandlopers"
        }
      },
      {
        "id": "countdown_start_ledring",
        "title": {
          "en": "Show a timer on ledring",
          "nl": "Toon een zandloper op de ledring"
        },
        "args": [
          {
            "name": "name",
            "type": "autocomplete",
            "placeholder": {
              "en": "Timer name",
              "nl": "Naam zandloper"
            }
          }
        ]
      },
      {
        "id": "countdown_stop_ledring",
        "title": {
          "en": "Stop ledring animation",
          "nl": "Stop ledring-weergave"
        }
      }
    ]
  },
  "permissions": [
    "homey:manager:ledring"
  ],
  "images": {
    "large": "/assets/images/large.png",
    "small": "/assets/images/small.png"
  }
}

